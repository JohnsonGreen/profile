<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/back">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        android:layout_alignParentBottom="true">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.64"
            android:weightSum="1">

            <ImageButton
                android:layout_weight="0.33"
                android:src="@drawable/tx"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="64dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.08"
            android:background="@drawable/textview_border"
            android:weightSum="1">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:layout_weight="0.20">//行距
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="1">


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:inputType="textPersonName"
                    android:hint="请输入账号"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:background="@drawable/textview_border"
                    android:ems="10"
                    android:id="@+id/editText"
                    android:gravity="center"
                    android:maxLength="15"
                    android:layout_weight="0.50" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:layout_weight="0.20">//行距
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:weightSum="1">


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:inputType="textPassword"
                    android:hint="请输入密码"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:background="@drawable/textview_border"
                    android:ems="10"
                    android:id="@+id/editText2"
                    android:gravity="center"
                    android:maxLength="20"
                    android:layout_weight="0.50" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:layout_weight="0.10">//行距
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_weight="0.32"
                android:weightSum="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    android:textSize="23dip"
                    android:textColor="@color/grey"
                    android:background="@drawable/textview_butten"
                    android:id="@+id/button"
                    android:onClick="click"
                    android:layout_weight="0.40" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1">
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:text="忘记密码"
                    android:textSize="20dip"
                    android:id="@+id/button2"
                    android:textColor="@color/white"
                    android:background="@drawable/textview_wu"
                    android:layout_weight="0.15" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.30" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册账号"
                    android:textSize="20dip"
                    android:id="@+id/button3"
                    android:textColor="@color/white"
                    android:background="@drawable/textview_wu"
                    android:layout_weight="0.15" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">//行距
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.28"
            android:weightSum="1">

            <TextView
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="______________     使用第三方账号    _______________"
                android:id="@+id/textView"
                android:textSize="15dip"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.29" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:layout_gravity="center_horizontal"
                android:weightSum="1">

                <ImageButton
                    android:layout_weight="0.33"
                    android:src="@drawable/qq"
                    android:background="#00000000"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="68dp" />
                <ImageButton
                    android:layout_weight="0.33"
                    android:src="@drawable/weixin"
                    android:background="#00000000"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="68dp" />
                <ImageButton
                    android:layout_weight="0.33"
                    android:src="@drawable/weibo"
                    android:background="#00000000"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="68dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
